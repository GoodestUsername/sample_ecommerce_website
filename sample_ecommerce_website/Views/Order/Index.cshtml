@model IEnumerable<sample_ecommerce_website.Models.OrderDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderModificationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderModificationDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderDetailsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderDetailsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderDetailsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
