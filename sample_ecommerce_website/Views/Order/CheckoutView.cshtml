
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

@model ShoppingCart

<div class="row">
    <div class="col-md-6">
        <h1>Checkout</h1>
        <h1>Cart total @Model.Total</h1>
        <a href=@Url.Action(action:"GoToAddressConfirmation", controller:"Order") class="btn btn-default" title="Details">Proceed to Checkout</a>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantities</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cartItem in Model.CartItems.ToList())
                {
                    <tr>
                        <td>@cartItem.Product.Name</td>
                        <td>@cartItem.Product.Price</td>
                        <td>@cartItem.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
        <form method="post" action="/Order/CreateOrder">
            <!-- Form fields -->
            <div>
                <label for="name">Amount:</label>
                <input type="text" id="amount" name="amount" value="" />
            </div>


            <!-- Submit button -->
            <button type="submit">Checkout</button>
        </form>
    </div>
</div>
