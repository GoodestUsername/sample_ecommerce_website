@model List<CartItem>
@{
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <h1>Cart</h1>

        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantities</th>
                </tr>
            </thead>
            @if (Model == null)
            {
               
            }
            else
            {
                <tbody>
                    @foreach (var cartItem in Model)
                    {
                        <tr>
                            <td>
                                <a href=@Url.Action(action: "ProductView", controller:"Product", values:new { itemId = cartItem.ProductId })><h5 class="card-title">@cartItem.Product.Name</h5></a>
                            </td>
                            <td>@cartItem.Product.Price</td>
                            <td>
                                @Html.DropDownListFor()
                                <input type="submit" value="submit" onchange="" >@cartItem.Quantity<input />
                            </td>
                            <td>
                                <a asp-controller="ShoppingCart" asp-action="Edit" asp-route-id="@cartItem.CartItemId">Remove one</a>
                                <a asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-id="@cartItem.CartItemId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            }

        </table>
    </div>
</div>
