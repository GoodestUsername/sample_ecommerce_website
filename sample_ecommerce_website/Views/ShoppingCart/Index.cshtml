@model ShoppingCart


<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <h1>Cart</h1>
        <h1> You have @Model.ItemQuantity items in cart</h1>
        <h1>Cart total @Model.Total</h1>
        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantities</th>
                </tr>
            </thead>
            @if (Model == null)
            {

            }
            else
            {
                <tbody>
                    @foreach (var cartItem in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <a href=@Url.Action(action: "ProductView", controller:"Product", values:new { itemId = cartItem.ProductId })><h5 class="card-title">@cartItem.Product.Name</h5></a>
                            </td>
                            <td>@cartItem.Product.Price</td>
                            <td>@cartItem.Quantity</td>
                            <td>
                                <a asp-controller="ShoppingCart" asp-action="RemoveOneFromCart" asp-route-id="@cartItem.CartItemId">Remove one</a>
                                <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@cartItem.CartItemId">Add one</a>
                                <a asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-id="@cartItem.CartItemId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>
