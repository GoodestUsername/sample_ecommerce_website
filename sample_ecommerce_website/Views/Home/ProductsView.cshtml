@*
    /// <summary>
    /// Sample Ecommerce website
    /// Contains the page with a list of products displayed for the user
    /// </summary>
*@
@model List<Product>
@{ ViewBag.Title = "Products Page"; }

<h1>Products</h1>

@foreach (var product in Model)
{
<div class="card" style="width: 18rem;">
    <div id="carouselExampleControls" class="carousel slide" data-mdb-ride="carousel">
        <div class="card-img-top carousel-inner">
            @foreach (var img in product.Images)
            {
                <div class="carousel-item active">
                    <img src=@img.ImageURL
                            class="d-block w-100"
                            alt="Wild Landscape" />
                </div>
            }
        </div>
        <button class="carousel-control-prev"
                type="button"
                data-mdb-target="#carouselExampleControls"
                data-mdb-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next"
                type="button"
                data-mdb-target="#carouselExampleControls"
                data-mdb-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

@*    <img class="card-img-top" src="@product.Images" alt="Card image cap">*@
    <div class="card-body">
        <a href="#"><h5 class="card-title">@product.Name</h5></a>
        <p class="card-text">@product.Price</p>
    </div>
</div>
}

