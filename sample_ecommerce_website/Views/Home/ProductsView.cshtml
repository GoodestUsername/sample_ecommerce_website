@*
    /// <summary>
    /// Sample Ecommerce website
    /// Contains the page with a list of products displayed for the user
    /// </summary>
*@
@model List<Product>
@{ ViewBag.Title = "Products Page"; }

<h1>Products</h1>
<div class="card-deck">
    @foreach (var product in Model)
     {
        <div class="card border-0">
            <div id=@product.ProductID class="carousel slide" data-mdb-ride="carousel">
                <div class="card-img-top carousel-inner">
                    @foreach (var img in product.Images)
                     {
                        <div class="carousel-item active embed-responsive embed-responsive-1by1">
                            <img src=@img.ImageURL
                                    class="card-img-top embed-responsive-item"
                                    alt=@product.Name />
                        </div>
                     }
                </div>
            </div>
            <div class="card-body text-center">
                <a href="#"><h5 class="card-title">@product.Name</h5></a>
                <h4 class="card-text ">$@product.Price</h4>
            </div>
        </div>
     }
</div>


