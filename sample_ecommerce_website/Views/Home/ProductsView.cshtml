@*
    /// <summary>
    /// Sample Ecommerce website
    /// Contains the page with a list of products displayed for the user
    /// </summary>
*@
@model List<Product>
@{ ViewBag.Title = "Products Page"; }

<h1>Campsite List</h1>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
         @foreach (var product in Model)
         {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.Category</td>
            </tr>
         }
    </tbody>
</table>


