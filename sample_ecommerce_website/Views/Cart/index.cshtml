@*

*@
@model List<CartItem>
@{
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <h1>Cart</h1>

        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantities</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var cartItem in Model)
                 {
                    <tr>
                        <td>@cartItem.Product.Name</td>
                        <td>@cartItem.Product.Price</td>
                        <td>@cartItem.Quantity</td>
                        <td>
                            <a asp-controller="Cart" asp-action="Edit" asp-route-id="@cartItem.CartItemId">Edit</a>
                            <a asp-controller="Cart" asp-action="Delete" asp-route-id="@cartItem.CartItemId">Delete</a>
                            <a asp-controller="Cart" asp-action="Info" asp-route-id="@cartItem.ProductId">Info</a>
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
</div>
